#include<iostream>
using namespace std;

int pivot(int arr[],int n){
    int s=0;
    int e=n-1;
    int mid=s+(e-s)/2;
    while(s<e){
        if(arr[mid]>=arr[0]){
            s=mid+1;
        }
        else{
            e=mid;
        }
        mid=s+(e-s)/2;
    }
    return s;
}

int main() { 

    int arr[6] = {2,7,8,9,10,2};
    cout<<"pivot at index "<< pivot(arr,6)<<endl;
     
    return 0;
}
